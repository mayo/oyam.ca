{
  "version": "https://jsonfeed.org/version/1",
  "title": "Mayo Jordanov",
  "home_page_url": "http://oyam.ca/",
  "feed_url": "http://oyam.ca/{{page.source_file}}",
  "author": {
  "name": "{{ site.author.name }}",
    "url": "http://oyam.ca"
  },
  "items": [
{%- for res in site.tags.articles -%}
    {
      "id": "http://oyam.ca/{{ res.path }}",
      "url": "http://oyam.ca/{{ res.path }}",
      "date_published": "{{ res.created.strftime('%Y-%m-%dT%H:%M:%SZ') }}",
  {% set updated = res.updated or res.created -%}
      "date_modified": "{{ updated.strftime('%Y-%m-%dT%H:%M:%SZ') }}",
  {% if res.type == 'photo' -%}
      "image": "http://oyam.ca/media/images/photos/{{ res.created.strftime('%Y/%m') }}/{{ res.photo }}",
      "content_html": {%- filter json -%}<p>{{ res.caption }}</p><p><img src="http://oyam.ca/media/images/photos/{{ res.created.strftime('%Y/%m') }}/{{ res.photo }}" title="{{ res.title }}"/></p>{%- endfilter -%}
  {% elif res.type == 'link' -%}
      "external_url": "{{ res.href }}",
      "content_html": {%- filter json -%}{%- if res.title -%}<p><a href="{{ res.href }}">{{ res.title }}</a></p>{%- endif -%}{{ res.contents }}{%- endfilter -%}
  {% elif res.type == 'quote' -%}
      "content_html": {%- filter json -%}&ldquo;{%- if res.contents == "" -%}{{ res.title }}{%- else -%}{{ res.contents }}{%- endif -%}&rdquo;<br/>&mdash; {{ res.author }}{%- endfilter -%},
      "author": {
        "name": {{ res.author|json }}
      }
  {% else -%}
      "content_html": {%- filter json -%}<p>{{ res.title }}. <a href="http://oyam.ca/{{ res.path }}">oyam.ca</a></p>{%- endfilter -%}
  {% endif %}
    }
  {% if not loop.last -%},{%- endif -%}
{%- endfor -%}
  ]
}

